<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticeSection"
    android:orientation="vertical"
    android:background="#000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SCORE"
        android:textColor="#fff"
        android:textAlignment="center"
        android:textSize="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:text="0"
        android:textSize="16dp"
        android:textColor="#fff"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:id="@+id/question"
        android:textColor="#fff"
        android:text="test"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/answer"
        android:text="Answer"
        android:background="#fff"
        android:gravity="center"/>

    <!-- KEYPAD SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/val1"
                    android:text="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num1"/>
                <TextView
                    android:text="2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num2"/>
                <TextView
                    android:text="3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num3"/>
                <TextView
                    android:text="4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num4"/>
            </TableRow>
            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/val5"
                    android:text="5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num5"/>
                <TextView
                    android:text="6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num6"/>
                <TextView
                    android:text="7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num7"/>
                <TextView
                    android:text="8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num8"/>
            </TableRow>
            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="DEL"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="del"/>
                <TextView
                    android:text="9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num9"/>
                <TextView
                    android:text="0"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num0"/>
                <TextView
                    android:text="."
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="decimal"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:textAlignment="center"
        android:onClick="checkAnswer"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/startButton"
        android:text="STart"
        android:textAlignment="center"
        android:onClick="startTest"/>

</LinearLayout><!--  183  -->