<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emulator"
    android:orientation="vertical"
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/basicFormulas">
            <TextView
                android:id="@+id/Xvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusX"/>
            <TextView
                android:id="@+id/sign1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Yvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Zvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusZ"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/Area23DFormulas">
            <TextView
                android:id="@+id/Hvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="h"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusH"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Wvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="w"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusW"/>
            <TextView
                android:id="@+id/sign2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="32dp"
                android:textColor="#fff"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/Dvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="32dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:onClick="focusD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Totvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusTot"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/ExponentFormula">
            <TextView
                android:id="@+id/expValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusEXP"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/expSuper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exp"
                    android:textSize="10dp"
                    android:textColor="#fff"
                    android:onClick="focusEXPSUP"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="none"
                    android:textSize="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/ExpTotvalue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/CustomFormula">
            <TextView
                android:id="@+id/Custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/CusTotvalue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/CircleFormula">
            <TextView
                android:id="@+id/Radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusRadius"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/CircleTotvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"/>
        </LinearLayout>
    </RelativeLayout>

    <!--  MESSAGE  -->
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textColor="#fff"
        android:textAlignment="center"/>

    <!-- KEYPAD SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/val1"
                    android:text="1"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num1"/>
                <TextView
                    android:text="2"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num2"/>
                <TextView
                    android:text="3"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num3"/>
                <TextView
                    android:text="4"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num4"/>
                <TextView
                    android:id="@+id/val5"
                    android:text="5"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num5"/>
            </TableRow>
            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="6"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num6"/>
                <TextView
                    android:text="7"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num7"/>
                <TextView
                    android:text="8"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num8"/>
                <TextView
                    android:text="9"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num9"/>
                <TextView
                    android:text="0"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num0"/>
            </TableRow>
            <TableRow
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="DEL"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="del"/>
                <TextView
                    android:text="."
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="decimal"/>
                <TextView
                    android:text="+"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="plus"/>
                <TextView
                    android:text="-"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="minus"/>
                <TextView
                    android:text="*"
                    android:layout_width="72dp"
                    android:layout_height="72dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="multi"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:textAlignment="center"
        android:onClick="clickToSolve"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practice Questions"
        android:textAlignment="center"
        android:onClick="practiceSection"/>

    <!-- LIST OF SUBJECTS-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Basic"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="displayBasic"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Algebra"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="displayAlgebra"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Geometry"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="displayGeometry"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Calculus"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="displayCalculus"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Physics"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="displayPhysics"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Custom"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="displayCustom"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- BASIC SUB SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/basicSub"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Add"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="setAddition"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Subtract"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="setSubtraction"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Divide"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="setDivision"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Multiply"
            android:textColor="#fff"
            android:textSize="8dp"
            android:onClick="setMultiplication"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Exponent"
            android:textColor="#fff"
            android:textSize="8dp"
            android:onClick="setExponent"/>
    </LinearLayout>

    <!-- ALGEBRA SUB SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/algebraSub"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2D Area"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="Area2D"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3D Area"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="Area3D"/>
    </LinearLayout>

    <!-- CALCULUS SUB SECTION-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/calculusSub"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Pythahorean"
            android:textColor="#fff"
            android:textSize="16dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Triangle 90"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

    <!-- PHYSICS SUB SECTION-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/physicsSub"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Linear Motion"
            android:textColor="#fff"
            android:textSize="16dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Circular Motion"
            android:textColor="#fff"
            android:textSize="16dp" />
    </LinearLayout>

    <!--   GEOMETRY SUB SECTIONS-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/geometrySub"
        android:visibility="gone">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Area Triangle"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="AreaTriangle"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Area Circle"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="AreaCircle"/>
    </LinearLayout>

</LinearLayout><!--  565  -->