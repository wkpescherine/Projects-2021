<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emulator"
    android:orientation="vertical"
    android:background="#000">

    <include layout="@layout/formula_ui"/>

    <!--  MESSAGE  -->
    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textColor="#fff"
        android:textAlignment="center"/>

    <include layout="@layout/keypad_ui"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:textAlignment="center"
        android:onClick="clickToSolve"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Practice Questions"
        android:textAlignment="center"
        android:onClick="practiceSection"/>

    <include layout="@layout/subjects"/>

    <!-- BASIC SUB SECTION -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/basicSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="add"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setFormula"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="subtract"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setFormula"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="divide"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setFormula"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="multiply"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setFormula"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Exponent"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setExponent"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- ALGEBRA SUB SECTION -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/algebraSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Square"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="Square"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Cube"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="Cube"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="x\u00B2"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="x2"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="x\u00B3"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="x3"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="(x\u00B1y)\u00B2"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setFormula"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- CALCULUS SUB SECTION-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/calculusSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Pythahorean"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setPythagoren"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- PHYSICS SUB SECTION-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/physicsSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Motion"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="selectSub2"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- GEOMETRY SUB SECTIONS-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/geometrySub"
        android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Area"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="selectSub2"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Circumference"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setCircumference"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- TRIG SUB SECTIONS-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/trigSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sin"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setSin"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Cos"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setCos"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Tan"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setTan"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="90"
                android:textColor="#fff"
                android:textSize="8dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="60"
                android:textColor="#fff"
                android:textSize="8dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="45"
                android:textColor="#fff"
                android:textSize="8dp"/>
        </LinearLayout>
    </HorizontalScrollView>

    <!-- PHYSICS SUBS2 -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/motionSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Linear: Velocity"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="LinearVelocity"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Linear Acceleration"
                android:textColor="#fff"
                android:textSize="8dp" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Angular Velocity"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="AngularVelocity"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Angular Acceleration"
                android:textColor="#fff"
                android:textSize="8dp" />
        </LinearLayout>
    </HorizontalScrollView>
    <!-- GEOMETRY SUBS2 -->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/areaSub"
            android:visibility="gone">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="90\u00B0 Triangle"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="AreaTriangle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Circle"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="AreaCircle"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Box"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="setBox"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Sphere"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="Sphere"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Cone"
                android:textColor="#fff"
                android:textSize="8dp"
                android:onClick="Cone"/>
        </LinearLayout>
    </HorizontalScrollView>

</LinearLayout><!--  374  -->