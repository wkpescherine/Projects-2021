<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <!--  Sin/Cos/Tan  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible"
            android:id="@+id/sincostan"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/SCT"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="SCT"
                android:textSize="32dp"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/Degree"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="degree"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusDegree"
                />
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"
                />
            <TextView
                android:id="@+id/radians"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="radians"
                android:textSize="32dp"
                android:textColor="#fff"
                />
        </LinearLayout>
        <!--  Add/Subtract/multiply/Divide  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:id="@+id/Basic">
            <TextView
                android:id="@+id/Xvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusX"/>
            <TextView
                android:id="@+id/sign1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Yvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusY"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Zvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusZ"/>
        </LinearLayout>
        <!--  Square/Cube  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:id="@+id/Area23DFormulas">
            <TextView
                android:id="@+id/Hvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="h"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusH"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Wvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="w"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusW"/>
            <TextView
                android:id="@+id/sign2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:textSize="32dp"
                android:textColor="#fff"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/Dvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="d"
                android:textSize="32dp"
                android:textColor="#fff"
                android:visibility="gone"
                android:onClick="focusD"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Totvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusTot"/>
        </LinearLayout>
        <!--  Exponent  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:id="@+id/ExponentFormula">
            <TextView
                android:id="@+id/expValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusEXP"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/expSuper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="exp"
                    android:textSize="10dp"
                    android:textColor="#fff"
                    android:onClick="focusEXPSUP"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="none"
                    android:textSize="10dp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/ExpTotvalue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <!--  Custom  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:id="@+id/CustomFormula">
            <TextView
                android:id="@+id/Custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/CusTotvalue2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <!--  Circle Area  -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="invisible"
            android:layout_centerInParent="true"
            android:id="@+id/CircleFormula">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\u03C0"
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/Radius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="r"
                android:textSize="32dp"
                android:textColor="#fff"
                android:onClick="focusRadius"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="32dp"
                android:textColor="#fff"/>
            <TextView
                android:id="@+id/CircleTotvalue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total"
                android:textSize="32dp"
                android:textColor="#fff"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout><!--  277 -->