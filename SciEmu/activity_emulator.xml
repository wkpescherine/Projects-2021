<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emulator"
    android:orientation="vertical"
    android:background="#000">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main"
        android:visibility="visible">
        <TextView
            android:id="@+id/Xvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sign"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusX"/>
        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/Yvalue"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Yvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_centerInParent="true"
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusY"/>
        <TextView
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/Yvalue"
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Zvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/equals"
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusZ"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/unique"
        android:visibility="gone">
        <TextView
            android:id="@+id/Avalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sign1"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusA"/>
        <TextView
            android:id="@+id/sign1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/Bvalue"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Bvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toLeftOf="@id/sign2"
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusB"/>
        <TextView
            android:id="@+id/sign2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Cvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/sign2"
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusC"/>
        <TextView
            android:id="@+id/equals1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/Cvalue"
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_toRightOf="@id/equals1"
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusTotal"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="10dp"
        android:textColor="#fff"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Basic"
            android:textColor="#fff"
            android:textSize="24dp"
            android:onClick="displayBasic"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Algebra"
            android:textColor="#fff"
            android:textSize="24dp"
            android:onClick="displayAlgebra"/>
    </LinearLayout>

    <!-- BASIC SUB SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/basicSub"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Add"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="additionText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Subtract"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="subtractionText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Divide"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="divideText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Multiply"
            android:textColor="#fff"
            android:textSize="16dp"
            android:onClick="multiplyText"/>
    </LinearLayout>

    <!-- ALGEBRA SUB SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/algebraSub"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="2D Area"
            android:textColor="#fff"
            android:textSize="24dp"
            android:onClick="Area2D"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="3D Area"
            android:textColor="#fff"
            android:textSize="24dp"
            android:onClick="Area3D"/>
    </LinearLayout>

    <!-- KEYPAD SECTION -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/val1"
                    android:text="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num1"/>
                <TextView
                    android:text="2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num2"/>
                <TextView
                    android:text="3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num3"/>
                <TextView
                    android:text="4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num4"/>
            </TableRow>
            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/val5"
                    android:text="5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num5"/>
                <TextView
                    android:text="6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num6"/>
                <TextView
                    android:text="7"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num7"/>
                <TextView
                    android:text="8"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num8"/>
            </TableRow>
            <TableRow
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text=""
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp" />
                <TextView
                    android:text="9"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num9"/>
                <TextView
                    android:text="0"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num0"/>
                <TextView
                    android:text=""
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp" />
            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:textAlignment="center"
        android:onClick="clickToSolve"/>

</LinearLayout><!-- 339 -->