<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Emulator"
    android:orientation="vertical"
    android:background="#000">

    <LinearLayout
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/Xvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusX"/>
        <TextView
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Yvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusY"/>
        <TextView
            android:id="@+id/equals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"/>
        <TextView
            android:id="@+id/Zvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:textSize="32dp"
            android:textColor="#fff"
            android:onClick="focusZ"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic"
            android:textColor="#fff"
            android:textSize="24dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Addition"
            android:textColor="#fff"
            android:textSize="24dp"
            android:onClick="additionText"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subtraction"
            android:textColor="#fff"
            android:textSize="24dp"
            android:onClick="subtractionText"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/val1"
                    android:text="1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num1"/>
                <TextView
                    android:text="2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num2"/>
                <TextView
                    android:text="3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num3"/>
                <TextView
                    android:text="4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="32dp"
                    android:onClick="num4"/>

            </TableRow>
        </TableLayout>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Solve"
        android:textAlignment="center"
        android:onClick="clickToSolve"/>

</LinearLayout><!-- 146 -->